// jsconfig.json (for JS projects)
{
  "compilerOptions": {
    "baseUrl": "./src",
    "ignoreDeprecations": "6.0",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "skipLibCheck": true,
    "types": [
      "react",
      "react-dom"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}